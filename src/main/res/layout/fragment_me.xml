<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/fragment_me_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="13dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="300"
                    fresco:failureImage="@drawable/doctor_default"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@drawable/doctor_default"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:roundedCornerRadius="30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="98dp"
                        android:layout_height="23dp"
                        android:text="沉浸深海の鱼"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="17dp"
                        android:text="账号：13424940234"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/jiantou_white" />

            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:layout_marginTop="-50dp"

            android:gravity="center_vertical"
            android:background="@drawable/me_kapian_background"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_zixun" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:text="健康档案"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_manbingguanli" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:text="消息盒子"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_yongyaozhidao" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:text="医师收藏"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_vip" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:text="秘籍收藏"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
