<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#fff"
            />
            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#e6fafafa"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tab_first"
                    android:layout_width="40dp"
                    android:layout_height="30dp"

                    android:src="@drawable/main_bottombg_first" />

                <TextView
                    android:id="@+id/tv_tab_first"
                    android:layout_width="48dp"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="#ff999999"
                    android:textSize="10sp" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#fff" />-->

            <LinearLayout
                android:id="@+id/tab_doctor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tab_doctor"
                    android:layout_width="40dp"
                    android:layout_height="30dp"

                    android:src="@drawable/main_bottombg_doctor" />
                <TextView
                    android:id="@+id/tv_tab_doctor"
                    android:layout_width="48dp"
                    android:layout_height="14dp"
                    android:text="医师"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#fff" />-->

            <LinearLayout
                android:id="@+id/tab_secret"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_secret"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/main_bottombg_secret" />
                <TextView
                    android:id="@+id/tv_tab_secret"
                    android:layout_width="48dp"
                    android:layout_height="14dp"
                    android:text="秘籍"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab_me"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_me"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/main_bottombg_me" />

                <TextView
                    android:id="@+id/tv_tab_me"
                    android:layout_width="48dp"
                    android:layout_height="14dp"
                    android:text="我的"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    android:gravity="center"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>