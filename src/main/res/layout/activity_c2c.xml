<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="StarRTC"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/title_left_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_right_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/title_right_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_shipin" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/msg_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:divider="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_input"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_corner_grey"
            android:gravity="center_vertical"
            android:hint="来聊吧~"
            android:paddingLeft="15dp"
            android:textColor="#141e41"
            android:textColorHint="#ff999999"
            android:textSize="12sp" />
        <!--<RelativeLayout-->
        <!--android:layout_width="75dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:background="@drawable/bg_btn_orange_back">-->
        <TextView
            android:id="@+id/send_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/xml_login_background"
            android:gravity="center"
            android:text="发送"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_sendimg"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/send_img"
            />
        <!--</RelativeLayout>-->

    </LinearLayout>

</LinearLayout>
