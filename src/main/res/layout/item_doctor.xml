<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_header"
        android:layout_width="92dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/doctor_default"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/doctor_default"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundedCornerRadius="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="王晓逸"
            android:textColor="#ff444444"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:text="资深医生"
            android:textColor="#ff333333"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="109dp"
            android:layout_height="12dp"
            android:text="擅长领域：健身运动"
            android:textColor="#ff333333"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:text="4.8"
            android:textColor="#ffffa037"
            android:textSize="10sp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_star1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/doctor_star_background"
            android:enabled="false"
            />
        <Button
            android:id="@+id/btn_star2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/doctor_star_background"
            android:enabled="false"
            />
        <Button
            android:id="@+id/btn_star3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/doctor_star_background"
            android:enabled="false"
            />
        <Button
            android:id="@+id/btn_star4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/doctor_star_background"
            android:enabled="false"
            />
        <Button
            android:id="@+id/btn_star5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/doctor_star_background"
            android:enabled="false"
            />
    </LinearLayout>
</LinearLayout>