<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/me_hotgoods_background"
    android:padding="10dp"
    android:id="@+id/ll_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_header"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:gravity="center"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/icon_goods_nonetwork"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/icon_goods_nonetwork"
        android:layout_gravity="center_horizontal"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="桂圆红枣枸杞茶养生滋补首选佳品"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_goods_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥378.00"
            android:textColor="#ffff3b30"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/iv_jifennduihuan"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_jifenduihuan"
            android:visibility="gone" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="月销20111件"
        android:textColor="#ff999999"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>