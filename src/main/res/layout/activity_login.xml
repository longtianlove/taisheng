<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:text="泰晟健康"
                android:textColor="#ffffffff"
                android:textSize="17sp" />


        </LinearLayout>





        <LinearLayout
            android:id="@+id/ll_zhanghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="59dp"
            android:paddingRight="59dp"
            android:layout_marginTop="63dp"
            android:background="#fff"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_user"

                    />

                <EditText
                    android:id="@+id/et_zhanghao"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:maxLength="20"
                    android:hint="请输入用户名/手机号"
                    android:gravity="center_vertical"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_zhanghao_guanbi"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_guanbi"
                    android:layout_marginRight="11dp"
                    android:layout_gravity="end|center_vertical"

                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="19dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="34dp"
                android:weightSum="1"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_mima"
                    />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入6-16位密码"
                    android:textColor="#ff999999"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_password_yincang"
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:src="@drawable/yincang_background"
                    android:layout_marginRight="11dp"
                    android:layout_gravity="end|center_vertical"

                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="19dp"
                />

            <TextView
                android:id="@+id/btn_zhanghao_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/xml_login_background"
                android:enabled="false"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp"></TextView>
            <TextView
                android:id="@+id/tv_yanzhengma_change"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="验证码登录"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shoujihao"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="59dp"
            android:paddingRight="59dp"
            android:layout_marginTop="63dp"
            android:background="#fff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_user"
                    />

                <EditText
                    android:id="@+id/et_shoujihao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:inputType="phone"
                    android:hint="请输入您的手机号码"
                    android:maxLength="11"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_shoujihao_guanbi"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_guanbi"
                    android:layout_marginRight="11dp"
                    android:layout_gravity="end|center_vertical"

                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="19dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:layout_marginTop="34dp"
                android:weightSum="1"
                >
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_yanzhengma"
                    />

                <EditText
                    android:id="@+id/et_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:layout_weight="1"
                    android:textColor="#ff999999"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btn_yanzhengma"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:background="@drawable/login_yanzhengma_background"
                    />
                
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="19dp"
                />

            <TextView
                android:id="@+id/btn_yanzhengma_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/xml_login_background"
                android:enabled="false"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp"></TextView>
            <TextView
                android:id="@+id/tv_zhanghao_change"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="密码登录"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>